# =============================================================================
# Threadmark - Compliance-Ready Product Records Platform
# =============================================================================
# Copy this file to .env and fill in your values:
#   cp .env.example .env

# -----------------------------------------------------------------------------
# App
# -----------------------------------------------------------------------------
NODE_ENV=development
APP_URL=https://your-tunnel-url.ngrok.io
PORT=3000
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Shopify
# -----------------------------------------------------------------------------
SHOPIFY_API_KEY=your_shopify_api_key
SHOPIFY_API_SECRET=your_shopify_api_secret
SCOPES=read_products,write_products

# -----------------------------------------------------------------------------
# Database (Postgres)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://threadmark:threadmark@localhost:5432/threadmark

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Session
# -----------------------------------------------------------------------------
SESSION_SECRET=replace-with-a-secure-random-string

# -----------------------------------------------------------------------------
# Object Storage (S3-compatible)
# -----------------------------------------------------------------------------
S3_BUCKET=threadmark-exports
S3_ACCESS_KEY=your_s3_access_key
S3_SECRET_KEY=your_s3_secret_key
S3_REGION=eu-west-1
S3_ENDPOINT=
